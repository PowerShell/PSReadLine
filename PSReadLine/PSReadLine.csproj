    <FileVersion>2.0.0</FileVersion>
    <InformationalVersion>2.0.0-beta3</InformationalVersion>
    <TargetFrameworks>net461;netcoreapp2.1</TargetFrameworks>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="PowerShellStandard.Library" version="5.1.0-*" />
    <PackageReference Include="Microsoft.CSharp" version="4.5.0-*" />
  </ItemGroup>
  <ItemGroup>
    <None Include="PSReadLine.psd1" />
    <None Include="PSReadLine.psm1" />
    <None Include="SamplePSReadLineProfile.ps1" />
    <None Include="Changes.txt" />
    <None Include="License.txt" />
  </ItemGroup>
  <ItemGroup>
    <None Include="docs\about_PSReadLine.help.txt" />
    <None Include="docs\Get-PSReadLineKeyHandler.md" />
    <None Include="docs\Get-PSReadLineOption.md" />
